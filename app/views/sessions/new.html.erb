
<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<h2 class="title is-2">Log in</h2>
				<%= form_tag sessions_path do |form| %>

				  <div class="field">
				  	<div class="control">
              <%= label_tag :username, "Username", :class => "label", :wrapper => false %>
              <%= text_field_tag :username, "", :class => "input", :wrapper => false %>
				    </div>
				  </div>

				  <%= submit_tag "Log in", class:"button is-info is-medium" %>
				<% end %>
				<br/>
			</div>
		</div>
	</div>
</section>