<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2">Sign Up</h2>

		<%= simple_form_for @user do |f| %>
	  <%= f.error_notification %>

	  <div class="field">
	  	<div class="control">
	    <%= f.input :name, required: false, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
	    <%= f.input :username, required: false, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "Sign up", class:"button is-info is-medium" %>
		 	</div>
		</div>

		<% end %>
			<br />
		</div>
		</div>
	</div>
</div>